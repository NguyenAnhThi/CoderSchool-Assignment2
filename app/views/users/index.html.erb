<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <h3 class="card-header"> Add Friends</h3>
      <div class="card-block">
        <div class="row">
          <% @users.each do |user| %>
              <div class="col-sm-4">
                <div class="card">
                  <div class="card-block">
                    <h4>
                      <div class="card-title text-primary"><%= user.name %></div>
                    </h4>
                    <div class="card-text"><%= user.email %></div>
                  </div>
                  <div class="card-footer">
                    <div class="text-center">
                      <%= link_to friendships_path(friend_id: user), method: 'post', class: 'btn btn-success' do %>
                          <i class="fa fa-plus-circle" aria-hidden="true"></i> Friend
                      <% end %>
                    </div>
                  </div>
                </div>
                <br>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
