<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <h3 class="card-header"> Sent</h3>
      <div class="card-block">
        <% if @messages.count > 0 %>
            <table class="table table-striped table-hover">
              <thead class="table-inverse">
              <tr>
                <th> To</th>
                <th> Time</th>
                <th> Read at</th>
              </tr>
              </thead>
              <tbody>
              <% @messages.each do |message| %>
                  <tr>
                    <td> <%= User.find_by_id(message.recipient_id).email %> </td>
                    <td> <%= message.created_at.strftime("%H:%M - %d %b %Y") %> </td>
                    <% if Message.find_by_id(message.id).read_at.nil? %>
                        <td><strong> Unread </strong></td>
                    <% else %>
                        <td> <%= message.read_at.strftime("%H:%M - %d %b %Y") %> </td>
                    <% end %>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% else %>
            <i class="text-info">There is no message!</i>
        <% end %>
      </div>
    </div>
  </div>
</div>